{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ES2020",   
    "module": "commonjs",              
    "outDir": "./dist",                
    "rootDir": "./",
    "moduleResolution": "node",                    
    "esModuleInterop": true,
    "types": ["node"],           
    "strict": true,                    
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true 
  },

  "include": [
    "./**/*.ts", 
    "!dist/**/*" 
  ],
  
  "exclude": [
    "node_modules", 
    "dist"                    
  ]
}
